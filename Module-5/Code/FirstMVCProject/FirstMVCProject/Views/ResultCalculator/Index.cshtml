@model FirstMVCProject.Models.ResultCalculator
@{
    ViewBag.Title = "Result Calculator";
   
}

<html>
<head>

</head>

<body>
    <div class="container-fluid">
        <h1 class="display-4 text-center">Result</h1>
        <hr />
    </div>

    <div class="form-row">
        @using (Html.BeginForm("/Index", "ResultCalculator", FormMethod.Post))
        {
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="jumbotron">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Enter Marks Of OS</h6>
                            <input type="text" id="txtOperatingSystem" class="form-control" name="OperatingSystem" value="@Model.OperatingSystem" />
                            <br />
                        </div>

                        <div class="col-md-6">
                            <h6>Enter Marks Of C++</h6>
                            <input type="text" id="txtCPP" class="form-control" name="CPP" value="@Model.CPP" />
                            <br />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Enter Marks Of CN</h6>
                            <input type="text" id="txtComputerNetwork" class="form-control" name="ComputerNetwork" value="@Model.ComputerNetwork" />
                            <br />
                        </div>

                        <div class="col-md-6">
                            <h6>Enter Marks Of Math</h6>
                            <input type="text" id="txtMath" class="form-control" name="Math" value="@Model.Math" />
                            <br />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Enter Marks Of CD</h6>
                            <input type="text" id="txtCompilerDesign" class="form-control" name="CompilerDesign" value="@Model.CompilerDesign" />
                            <br />
                        </div>
                    </div>

                    <button type="submit" id="btnCalculateResult" class="btn btn-success btn-lg btn-block" name="Calculate">Calculate Result</button>
                    <br />

                    <h6>Percentage</h6>
                    <input type="text" id="txtPercentage" class="form-control" name="Percentage" value="@Model.Percentage" />

                </div>
            </div>
            <div class="col-md-3"></div>
        }
    </div>
</body>
</html>

